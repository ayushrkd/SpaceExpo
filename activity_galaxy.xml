<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_for_splash"
    android:orientation="vertical"
    android:layout_gravity="center"

    tools:context=".galaxy">

    <TextView
        android:layout_width="20dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/button"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/cardview_dark_background"
        android:layout_height="wrap_content"

        android:text="Mercury"

        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:backgroundTint="#D555CCBD"
        android:layout_gravity="center"
        android:layout_height="wrap_content"

        android:text="Venus" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#D51151D0"
        android:text="Earth" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#C74A23"
        android:layout_gravity="center"
        android:text="Mars" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D9BA8E"
        android:layout_gravity="center"
        android:text="Jupiter" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#33262B"
        android:layout_gravity="center"
        android:text="Saturn" />

    <Button
        android:id="@+id/button7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#D555CCBD"
        android:layout_gravity="center"
        android:text="Uranus" />

    <Button
        android:id="@+id/button8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#278E6E"
        android:layout_gravity="center"
        android:text="Neptune" />


    <Button
        android:id="@+id/button9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#D51B0D31"
        android:text="Pluto" />




    <Button
        android:id="@+id/button11"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFC107"
        android:text="Sun" />
</LinearLayout>